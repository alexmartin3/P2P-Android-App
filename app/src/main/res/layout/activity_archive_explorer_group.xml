<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context="com.example.samue.login.ArchiveExplorerGroup">

    <TextView
        android:id="@+id/rutaActual"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        android:text="Estas en: "
        android:textSize="20sp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <ListView
        android:id="@+id/lista_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rutaActual"></ListView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_folder_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:foregroundGravity="bottom"
        android:src="@android:drawable/sym_contact_card"
        app:backgroundTint="@android:color/holo_blue_light"
        app:fabSize="normal" />


</RelativeLayout>